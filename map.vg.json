{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1000,
  "height": 520,
  "title": {
    "text": "Australia’s Trade Partners — Interactive Map",
    "subtitle": "Source: ABS & DFAT (2014–2024)",
    "anchor": "middle",
    "fontSize": 18,
    "fontWeight": "bold",
    "subtitleFontSize": 12
  },
  "projection": {"type": "equalEarth"},
  "params": [
    {"name": "yearFilter"},
    {"name": "tradeType"}
  ],
  "layer": [
    {
      "data": {"sphere": true},
      "mark": {"type": "geoshape", "fill": "#cfe8ff"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "#f0f0f0",
        "stroke": "#000000",
        "strokeWidth": 0.3,
        "opacity": 0.9
      }
    },
    {
      "data": {"url": "Data/exports2024.csv"},
      "transform": [
        {"filter": "datum.Year == yearFilter"},
        {
          "lookup": "Country",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
              "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
            },
            "key": "properties.NAME",
            "fields": ["type", "geometry"]
          }
        },
        {
          "calculate": "tradeType == 'Exports' ? datum.Exports_A$b : datum.Imports_A$b",
          "as": "TradeValue"
        }
      ],
      "mark": {"type": "geoshape", "stroke": "#000000", "strokeWidth": 0.5},
      "encoding": {
        "color": {
          "field": "TradeValue",
          "type": "quantitative",
          "title": "Trade Value (A$ Billion)",
          "scale": {
            "domain": [0, 210],
            "scheme": {"signal": "tradeType == 'Exports' ? 'reds' : 'blues'"}
          },
          "legend": {"orient": "right", "gradientLength": 220}
        },
        "tooltip": [
          {"field": "Country", "title": "Country"},
          {"field": "Year", "title": "Year"},
          {"field": "Exports_A$b", "title": "Exports (A$ Billion)", "format": ".1f"},
          {"field": "Imports_A$b", "title": "Imports (A$ Billion)", "format": ".1f"}
        ]
      }
    },
    {
      "data": {"graticule": {"step": [20, 20]}},
      "mark": {"type": "geoshape", "stroke": "#a3b1c2", "strokeWidth": 0.4, "fill": null}
    }
  ],
  "config": {
    "background": "#eaf3fb",
    "view": {"stroke": null},
    "style": {"cell": {"stroke": "transparent"}},
    "title": {"font": "Inter", "fontWeight": "600"}
  }
}
